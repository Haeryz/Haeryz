name: Metrics

on:
  schedule:
    # Update every day at 12am UTC
    - cron: '0 0 * * *'
  workflow_dispatch:

jobs:
  metrics:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout repository
        uses: actions/checkout@v3

      - name: Setup Metrics
        uses: lowlighter/metrics@v3.34
        with:
          token: ${{ secrets.GITHUB_TOKEN }}
          base: "repositories"
          plugin_languages: "yes"
          plugin_activity: "yes"
